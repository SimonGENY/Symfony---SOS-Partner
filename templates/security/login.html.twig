{% extends 'base.html.twig' %}
{% block body %}


    <form  method="post" action="{{ path('security_login') }}" class="form-signin">

        <h1 class="h3 mb-3 font-weight-normal">Formulaire de connexion</h1>
        {% for errorMessage in app.flashes('error') %}
            <div class="alert alert-danger d-flex align-items-center justify-content-between" role="alert">
                <div class="flex-fill mr-3">
                    <p class="mb-0">{{ errorMessage }}</p>
                </div>
            </div>
        {% endfor %}
        {% for succesMessage in app.flashes('success') %}
            <div class="alert alert-success d-flex align-items-center justify-content-between" role="alert">
                <div class="flex-fill mr-3">
                    <p class="mb-0">{{ succesMessage }}</p>
                </div>
            </div>
        {% endfor %}
        <div class="form-group">
            <label for="email"></label>
            <input id="email" type="email" class="form-control" name="_username" placeholder="Email" value="{{ lastUsername }}">
        </div>

        <div class="form-group">
            <label for="mdp"></label>
            <input id="mdp" type="password" class="form-control" name="_password" placeholder="Mot de passe">
        </div>

        <div class="mt-3">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
        </div><br/>
        <a href="{{ path('security_register') }}"><p>Premi√®re visite ?</p></a>

    </form>



{% endblock %}
