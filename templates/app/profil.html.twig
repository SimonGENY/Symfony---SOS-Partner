{% extends 'app.html.twig' %}


{% block body %}
    <div class="container bootstrap snippet mt-3">
        <div class="card">
            <div class="px-3 py-3">
                <h5 class="display-4">Profil de {{ app.user.prenom }}</h5><br/>
                <div class="row">
                            <hr>
                    {{ form_start(form) }}
                            <form class="form-signin"  method="post" >
                                <div class="form-group">
                                    {{ form_label(form.username) }}
                                    {{ form_widget(form.username , {'value' : app.user.username }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email , {'value' : app.user.email }) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.password) }}
                                    {{ form_widget(form.password) }}
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12">
                                        <br>
                                        <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Mettre Ã  jour</button>
                                        <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Annuler</button>
                                    </div>
                                </div>
                            </form>
                            <hr>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
