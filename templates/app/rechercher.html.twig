{% extends 'app.html.twig' %}


{% block body %}
    <div class="container mt-3">
        <div class="card">
            <div class="px-3 py-3">
                <h3>Rechercher un joueur</h3>
                {{ form_start(form) }}
                <div class="form-group row">
                    {{ form_label(form.nom,null, {'label_attr' : {'class' : 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.nom, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.prenom,null, {'label_attr' : {'class' : 'col-sm-2 col-form-label'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.prenom, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputState" class="col-sm-2 col-form-label">Jeux :</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.sports, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12 mt-3">
                        <button type="submit" class="btn btn-primary">Lancer la recherche</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>

{% endblock %}
